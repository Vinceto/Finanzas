{% extends 'base.html.twig' %}

{% block title %}Editar Transacción{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Editar Transacción</h1>

    {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_label(form.type, 'Tipo', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.type) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.currency, 'Moneda', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.currency, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.currency) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                {{ form_label(form.amount, 'Monto', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.amount) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.date, 'Fecha', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.date) }}
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <button class="btn btn-primary">Guardar Cambios</button>
                <a href="{{ path('transaction_index') }}" class="btn btn-secondary ms-2">Cancelar</a>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
